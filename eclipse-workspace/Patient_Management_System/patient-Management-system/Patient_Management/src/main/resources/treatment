DROP TABLE treatment IF EXISTS;
CREATE TABLE treatment (
id Integer NOT NULL AUTO_INCREMENT,
patientFirstName VARCHAR(30),
patientLastName VARCHAR(50),
patientMedicine VarCHAR(30),
patientAlleries VARCHAR(200),
medicinedoses Integer,
specialNote VARCHAR(300),

PRIMARY KEY (`id`)

 );
